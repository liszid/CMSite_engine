/**
 * Used for the Sidebar view
 */
@media screen and (min-width:768px){
	.coverIt .hideThis{
		display:none;
	}
	.coverIt:hover .hideThis{
		display:inline-block;
	}
	.coverIt .nav-item:hover,.coverIt .dropdown-item:hover{
  		box-shadow: inset 0 0 100px 100px rgba(0,0,0,0.1);
	}
	.coverIt .nav-link:hover,.coverIt .drowdown-item:hover{
		filter: brightness(1);
	}
	.coverIt .nav-link:not(:hover),.coverIt .drowdown-item:not(:hover){
		filter: brightness(0.95);
	}
}
/**
 * Smart switch classes for sticky-to-fixed
 */
@media screen and (min-width:768px) {
	.sticky-md-top {
		position: -webkit-sticky;
		position: sticky;
 		top: 0;
 		z-index: 1020;
	}	
	.position-md-fixed {
		position: fixed !important;
	}
}
@media screen and (max-width:768px){
	.sticky-sm-top{
 		position: -webkit-sticky;
 		position: sticky;
 		top: 0;
 		z-index: 1020;
	}
	.position-sm-fixed{
  		position: fixed !important;
	}
}
/**
 * Static z-index classes. Over-the-top is the origo class, m-1 is below, p-1 is above
 */
.over-the-top-p-2 {
	z-index: 1050 !important; 
}
.over-the-top-p-1 {
	z-index: 1040 !important; 
}
.over-the-top {
	z-index: 1030 !important; 
}
.over-the-top-m-1 {
	z-index: 1020 !important; 
}
.over-the-top-m-2 {
	z-index: 1010 !important; 
}
